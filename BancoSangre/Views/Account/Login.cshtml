@using BancoSangre.Models
@model LoginViewModel
@{
	ViewBag.Title = "Iniciar sesión";
}


<div class="row">
	<div class="col-md-10">
		<h2>@ViewBag.Title</h2>
		<section id="loginForm">
			@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<h4>Ingrese su usuario y contraseña para ingresar.</h4>
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<div class="checkbox">
							@Html.CheckBoxFor(m => m.RememberMe)
							@Html.LabelFor(m => m.RememberMe)
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Iniciar sesión" class="btn btn-default" />
					</div>
				</div>
				<p>
					@Html.ActionLink("Registrar como nuevo usuario", "Register")
				</p>
				@* Habilite esta opción después de habilitar la confirmación de la cuenta para la función de restablecimiento de contraseña
					<p>
							@Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
					</p>*@
			}
		</section>
	</div>

</div>

<div id="divLanzamiento" class="divLanzamiento">
	<div class="barraIngresoIzquierda barraIngreso"><div class="contenedorCentrar"><div class="divCentrar">Banco de solidaridad</div></div></div>
	<div class="logoBancoSangre" id="logoBancoSangre"></div>
	<div class="barraIngresoDerecha barraIngreso"><div class="contenedorCentrar"><div class="divCentrar">2.0</div></div></div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/Scripts/lanzamiento.js")
}
