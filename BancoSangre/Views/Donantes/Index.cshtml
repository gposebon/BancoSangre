@model IEnumerable<BancoSangre.Models.Donante>

@{
	ViewBag.Title = "Index";
}


<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
            <label for="TipoDocumento">Tipo Documento</label>
            
        </th>
		<th>
            <label for="NroDoc">Nº Documento</label>
			
		</th>
		<th>
            <label for="Apellido">Apellido</label>
			
		</th>
		<th>
            <label for="Nombre">Nombre</label>
			
		</th>
		<th>
            <label for="Domicilio">Domicilio</label>
			
		</th>
		<th>
            <label for="Telefono">Telefono</label>
			
		</th>
		<th>
            <label for="Edad">Edad</label>
			
		</th>
		<th>
            <label for="GrupoSanguineo">Grupo Sanguineo</label>
			
		</th>
		<th>
            <label for="NombreLocalidad">Localidad</label>
			
		</th>
		<th>
            <label for="NombreProvincia">Provincia</label>
			
		</th>
		<th>
            <label for="EstadoDonante">Estado</label>
		
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.TipoDocumento.DescripcionTipoDoc)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.NroDoc)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Apellido)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Nombre)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Domicilio)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Telefono)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Edad)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.GrupoSanguineo)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Localidad.NombreLocalidad)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Provincia.NombreProvincia)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.EstadoDonante.DescripcionEstado)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.IdDonante }) |
				@Html.ActionLink("Details", "Details", new { id = item.IdDonante }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.IdDonante })
			</td>
		</tr>
	}

</table>

@section Scripts {
	<script>
		$(document).ready(function () {
			$(".barraLateralDerecha").hide();
		});
	</script>
}