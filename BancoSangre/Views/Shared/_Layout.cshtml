<!DOCTYPE html>
<html ng-app="bancoSangreApp">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Banco de solidaridad 2.0</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Styles.Render("~/Scripts/angular-csp.css")
	@Styles.Render("~/Content/xeditable.css")
	@Styles.Render("~/Content/loading-bar.css")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="containerNav">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Banco de solidaridad 2.0", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Inicio", "Login", "Account")</li>
					<li>@Html.ActionLink("Acerca de", "About", "Home")</li>
					<li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<!--footer>
			<hr />
			<p>&copy; @DateTime.Now.Year - Banco de solidaridad 2.0</p>
		</!--footer-->
	</div>
	<div class="col-md-2 barraLateralDerecha">
	</div>

	@*@Scripts.Render("~/bundles/bootstrap")*@

	@Scripts.Render("~/Scripts/jquery-ui-1.12.1.js")
	@Scripts.Render("~/Scripts/angular.min.js")
	@Scripts.Render("~/Scripts/angular-sanitize.js")
	@Scripts.Render("~/Scripts/bootstrap.min.js")
	@Scripts.Render("~/Scripts/ui-bootstrap-tpls.min.js")
	@Scripts.Render("~/Scripts/xeditable.min.js")
	@Scripts.Render("~/Scripts/loading-bar.js")
	@Scripts.Render("~/Scripts/smart-table.min.js")

	<!-- AngularJs Files -->
	@Scripts.Render("~/app/app.js")

	@Scripts.Render("~/app/modal/modalServicio.js")
	@Scripts.Render("~/app/modal/modalController.js")
	@Scripts.Render("~/app/directivas/modalDirectiva.js")
	<!-- AngularJs Files -->

	@RenderSection("scripts", required: false)

</body>
</html>
